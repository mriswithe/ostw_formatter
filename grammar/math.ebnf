# Numeric literals
ONE_NUMBER = /\d/ ;
NUMERIC = /\d+/ ;
DOT = '.' ;
FLOAT = NUMERIC DOT NUMERIC SCI_NOTE;
NEG
    =
    | '-'
    | ()
    ;
INT = NUMERIC;
E = 'e';
OP
    =
    | '+'
    | '-'
    ;
SCI_NOTE
    =
    | &E OP NUMERIC
    | () `False`
    ;

NUMBER_TYPES
    =
    | INT
    | FLOAT
    ;
#number = NEG left:NUMERIC [right:FLOAT];
number = NEG NUMBER_TYPES;
NUMBER = number ;


math_symbol
    =
    | '+'
    | '-'
    | '*'
    | '/'
    ;


math = expr math_symbol expr ;