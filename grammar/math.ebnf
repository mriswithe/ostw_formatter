# Numeric literals
ONE_NUMBER = /\d/ ;
NUMERIC = /\d+/ ;
DOT = '.' ;
FLOAT = NEG '.'.{NUMERIC}+ SCI_NOTE;
NEG
    =
    | '-' @:`NEG`
    | @:`POS`
    ;
INT = NEG {ONE_NUMBER}+;
E = 'e';
OP
    =
    | '+'
    | '-'
    ;
SCI_NOTE
    =
    | E OP NUMERIC
    | () `False`
    ;

number_types
    =
    | FLOAT
    | INT
    ;
#number = NEG left:NUMERIC [right:FLOAT];
number = number_types;
NUMBER = number ;


math_symbol
    =
    | '+'
    | '-'
    | '*'
    | '/'
    ;

